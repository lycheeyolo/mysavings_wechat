/* index.wxss */
.container {
  background-color: #f8fafc;
  min-height: 100vh;
  padding-bottom: 40rpx;
}

/* 头部样式 */
.header {
  background: linear-gradient(135deg, #3b82f6, #2563eb);
  padding: 40rpx 32rpx 80rpx;
  border-radius: 0 0 40rpx 40rpx;
  box-shadow: 0 4rpx 20rpx rgba(59, 130, 246, 0.3);
}

.header-content {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
}

.title {
  font-size: 42rpx;
  font-weight: bold;
  color: white;
  margin-bottom: 12rpx;
}

.subtitle {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.85);
}

/* 概览卡片 */
.overview-cards {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24rpx;
  padding: 0 32rpx;
  margin-top: -60rpx;
  margin-bottom: 40rpx;
}

.card {
  border-radius: 20rpx;
  padding: 24rpx;
  box-shadow: 0 6rpx 18rpx rgba(0, 0, 0, 0.08);
  background: white;
  position: relative;
  overflow: hidden;
}

.card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 8rpx;
}

.income-card::before { background-color: #10b981; }
.expense-card::before { background-color: #ef4444; }
.networth-card::before { background-color: #06b6d4; }
.cashflow-card::before { background-color: #8b5cf6; }

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.card-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #64748b;
}

.card-icon {
  width: 36rpx;
  height: 36rpx;
}

.card-value {
  font-size: 38rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.positive { color: #10b981; }
.negative { color: #ef4444; }

.card-desc {
  font-size: 24rpx;
  color: #94a3b8;
}

/* 标签页样式 */
.tabs {
  display: flex;
  background: white;
  border-radius: 16rpx;
  margin: 0 32rpx 32rpx;
  padding: 8rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 20rpx;
  font-size: 28rpx;
  color: #94a3b8;
  border-radius: 12rpx;
  transition: all 0.3s ease;
}

.tab-item.active {
  background: #eff6ff;
  color: #3b82f6;
  font-weight: 500;
}

/* 内容区域 */
.content {
  padding: 0 32rpx;
}

.tab-content {
  display: none;
}
/* 
.tab-content[wx:if] {
  display: block;
} */

.section {
  background: white;
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 32rpx;
  flex-wrap: wrap;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #1e293b;
}

.section-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 12rpx;
}

/* 表单样式 */
.form-row {
  display: flex;
  gap: 24rpx;
  margin-bottom: 24rpx;
}

.form-group {
  flex: 1;
  margin-bottom: 24rpx;
}

.form-label {
  display: block;
  font-size: 26rpx;
  color: #64748b;
  margin-bottom: 12rpx;
  font-weight: 500;
}

.picker {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: #f8fafc;
  border-radius: 12rpx;
  padding: 20rpx 24rpx;
  font-size: 28rpx;
  color: #1e293b;
}

.picker-arrow {
  width: 24rpx;
  height: 24rpx;
}

.picker-icon {
  width: 32rpx;
  height: 32rpx;
}

.form-input {
  background: #f8fafc;
  border-radius: 12rpx;
  padding: 20rpx 24rpx;
  font-size: 28rpx;
  color: #1e293b;
}

/* 按钮样式 */
.add-button {
  background: #3b82f6;
  color: white;
  border-radius: 12rpx;
  padding: 24rpx;
  font-size: 28rpx;
  font-weight: 500;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(59, 130, 246, 0.3);
}

.button-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 12rpx;
}

.delete-button {
  background: #fee2e2;
  color: #ef4444;
  border-radius: 8rpx;
  padding: 10rpx 16rpx;
  font-size: 24rpx;
}

/* 交易表格 */
.filter-container {
  width: 100%;
  margin-top: 20rpx;
}

.filter-group {
  display: flex;
  gap: 16rpx;
  margin-bottom: 16rpx;
}

.date-picker {
  flex: 1;
  background: #f8fafc;
  border-radius: 12rpx;
  padding: 16rpx;
  text-align: center;
  font-size: 26rpx;
}

.date-separator {
  line-height: 60rpx;
  color: #94a3b8;
}

.filter-picker {
  flex: 1;
  background: #f8fafc;
  border-radius: 12rpx;
  padding: 16rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 8rpx;
}

.filter-icon {
  width: 24rpx;
  height: 24rpx;
}

.transaction-table {
  border: 1rpx solid #e2e8f0;
  border-radius: 16rpx;
  overflow: hidden;
}

.table-header {
  display: flex;
  background: #f1f5f9;
  padding: 20rpx 0;
}

.header-cell {
  flex: 1;
  text-align: center;
  font-size: 26rpx;
  font-weight: 500;
  color: #64748b;
}

.table-body {
  max-height: 600rpx;
}

.table-row {
  display: flex;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f1f5f9;
}

.table-cell {
  flex: 1;
  text-align: center;
  font-size: 26rpx;
  color: #334155;
  padding: 0 8rpx;
}

.tag {
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: 500;
}

.income-tag {
  background: #d1fae5;
  color: #047857;
}

.expense-tag {
  background: #fee2e2;
  color: #b91c1c;
}

.income-value {
  color: #10b981;
  font-weight: 500;
}

.expense-value {
  color: #ef4444;
  font-weight: 500;
}

.loading {
  text-align: center;
  padding: 40rpx 0;
}

/* 资产列表 */
.asset-item, .liability-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #f1f5f9;
}

.asset-info, .liability-info {
  flex: 1;
}

.asset-name, .liability-name {
  font-size: 28rpx;
  color: #1e293b;
  margin-bottom: 8rpx;
}

.asset-value, .liability-value {
  font-size: 26rpx;
  color: #64748b;
}

.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 60rpx 0;
}

.empty-icon {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 24rpx;
  opacity: 0.3;
}

.empty-text {
  font-size: 28rpx;
  color: #94a3b8;
}

/* 财务报表 */
.report-filters {
  width: 100%;
  margin-top: 20rpx;
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.date-range-picker {
  display: flex;
  flex: 2;
  gap: 16rpx;
  align-items: center;
}

.clear-button {
  background: #f1f5f9;
  color: #64748b;
  border-radius: 12rpx;
  padding: 16rpx;
  font-size: 26rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.clear-icon {
  width: 24rpx;
  height: 24rpx;
  margin-right: 8rpx;
}

.charts-container {
  display: grid;
  grid-template-columns: 1fr;
  gap: 32rpx;
  margin-bottom: 40rpx;
}

@media (min-width: 768px) {
  .charts-container {
    grid-template-columns: repeat(2, 1fr);
  }
}

.chart-card {
  background: white;
  border-radius: 20rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
}

.chart-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #1e293b;
  margin-bottom: 24rpx;
  display: block;
}

ec-canvas {
  width: 100%;
  height: 400rpx;
}

.balance-details {
  display: grid;
  grid-template-columns: 1fr;
  gap: 32rpx;
}

@media (min-width: 768px) {
  .balance-details {
    grid-template-columns: repeat(2, 1fr);
  }
}

.assets-detail, .liabilities-detail {
  background: white;
  border-radius: 20rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
}

.detail-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #1e293b;
  margin-bottom: 24rpx;
  display: block;
}

.detail-item {
  display: flex;
  justify-content: space-between;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f1f5f9;
}

.detail-name {
  font-size: 26rpx;
  color: #475569;
}

.detail-value {
  font-size: 26rpx;
  color: #1e293b;
  font-weight: 500;
}

.detail-total {
  display: flex;
  justify-content: space-between;
  padding: 24rpx 0 0;
  margin-top: 16rpx;
  border-top: 2rpx solid #e2e8f0;
}

.total-label {
  font-size: 28rpx;
  font-weight: bold;
  color: #1e293b;
}

.total-value {
  font-size: 28rpx;
  font-weight: bold;
  color: #3b82f6;
}